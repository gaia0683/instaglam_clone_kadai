<h1>ポスト一覧</h1>

<table>
  <tr>
    <th>名前</th>
    <th>内容</th>
    <th>写真</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.user.name %></td>
    <td><%= post.post %></td>
    <td><%= image_tag post.picture.url, style: 'width:400px; height:240px' if post.picture.present? %></td>

    <td><%= link_to '詳細を確認する', post_path(post.id), class: "btn btn-primary" %></td>
    <% if post.user == current_user %>
      <td><%= link_to 'ポストを編集する', edit_post_path(post.id), data: { confirm: '本当に編集していいですか？' }, class: "btn btn-info" %></td>
      <td><%= link_to 'ポストを削除する', post_path(post.id), method: :delete, data: { confirm: '本当に削除していいですか？' }, class: "btn btn-danger" %></td>
    <% else %>
    <% end %>
  </tr>
<% end %>
</table>

<%= link_to 'お気に入りポスト一覧を見る', favorites_path, class: "btn btn-warning" %>

<%= link_to '新しくポストを投稿する', new_post_path, class: "btn btn-success" %>
